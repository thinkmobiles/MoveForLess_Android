<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
        </shape>
    </item>

    <item
        android:left="-10px"
        android:top="-10px"
        android:right="0px"
        android:bottom="0px"
        >
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1px"
                android:color="#44000000" />
        </shape>
    </item>

    <item
        android:left="-10px"
        android:top="-10px"
        android:right="1px"
        android:bottom="1px"
        >
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1px"
                android:color="#33000000" />
        </shape>
    </item>

    <item
        android:left="-10px"
        android:top="-10px"
        android:right="2px"
        android:bottom="2px"
        >
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1px"
                android:color="#22000000" />
        </shape>
    </item>

    <item
        android:left="-10px"
        android:top="-10px"
        android:right="3px"
        android:bottom="3px"
        >
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1px"
                android:color="#11000000" />
        </shape>
    </item>

</layer-list>

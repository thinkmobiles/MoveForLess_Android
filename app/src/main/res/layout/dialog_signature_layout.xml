<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle_DSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        style="@style/BaseTitleStyle"
        />

    <TextView
        android:id="@+id/tvDescription_DSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        style="@style/BaseTextStyle"
        />


    <FrameLayout
        android:id="@+id/gesture_container_SL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/signature_background"
        android:layout_weight="1">

        <android.gesture.GestureOverlayView
            android:id="@+id/gesture_DSL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:eventsInterceptionEnabled="true"
            android:fadeEnabled="false"
            android:gestureColor="#143ca1"
            android:gestureStrokeLengthThreshold="0.1"
            android:gestureStrokeWidth="3.0"
            android:gestureStrokeType="multiple"
            android:orientation="vertical">

        </android.gesture.GestureOverlayView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/btnClear_DSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdf"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"
            style="@style/DialogButtonStyle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnClose_DSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="-10dp"
            android:text="asasdf"
            style="@style/DialogButtonStyle"
            />
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_row_QR"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/questionText_QR"
        style="@style/QuestionnaireDescriptionTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />

    <com.miami.moveforless.customviews.CustomSpinner
        android:id="@+id/spinner_QR"
        style="@style/BaseSpinnerStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingRight="80dp" />
</LinearLayout>
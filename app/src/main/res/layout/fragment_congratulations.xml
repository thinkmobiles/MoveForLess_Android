<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job_congratulation_background">


    <com.miami.moveforless.customviews.HelveticaTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/congratulation_text"
        style="@style/BaseTitleStyle"
        />
    
    <com.miami.moveforless.customviews.HelveticaButton
        android:id="@+id/btnBack_FC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_schedule"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        style="@style/NavigateButtonStyle"
        />
</FrameLayout>
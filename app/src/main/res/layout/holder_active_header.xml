<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icn_up_y"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Active"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="#d2eacc51"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/abc_btn_radio_to_on_mtrl_015"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:src="@drawable/abc_btn_check_to_on_mtrl_000"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActivePostTitle_HAH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="#006750"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActiveRequiredPickupDate_HAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#006750"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActiveFullname_HAH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="#006750"
                android:textSize="24sp"
                />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvActivePhone_HAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="#006750"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActiveFromZipcode_HAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActiveToZipcode_HAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <TextView
                android:id="@+id/tvActivePickupDate_HAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="#006750"
                android:textSize="24sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#84B6AD"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@android:drawable/checkbox_on_background"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
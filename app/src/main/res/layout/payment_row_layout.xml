<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivDone_row"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_check_yellow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/btnPaymentDelete_row"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete"
            android:visibility="invisible" />


    </FrameLayout>

    <Spinner
        android:id="@+id/spinnerSelector_row"
        style="@style/BaseTextStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.miami.moveforless.customviews.HelveticaEditText
            android:id="@+id/tvAmount_row"
            style="@style/BaseEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:hint="0"
            android:inputType="numberDecimal|numberSigned"
            android:minWidth="50dp"
            android:textColor="@color/cyan_800"
            android:textColorHint="@color/cyan_800"
            android:textSize="24sp"
            android:visibility="gone" />

        <com.miami.moveforless.customviews.HelveticaTextView
            android:id="@+id/amount_dollar_row"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="$"
            android:textSize="24sp"
            android:visibility="gone" />

    </LinearLayout>

    <com.miami.moveforless.customviews.HelveticaTextView
        android:id="@+id/btnConfirm_row"
        style="@style/BaseTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Confirm"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        android:visibility="gone" />

</LinearLayout>
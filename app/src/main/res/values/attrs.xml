<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="customFont"/>
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="customFont"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="customFont"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressBar">
        <attr name="progressColour" format="color" />
        <attr name="secondaryProgressColour" format="color" />
        <attr name="backgroundColour" format="color" />
        <attr name="duration" format="integer" />
    </declare-styleable>


    <attr name="customFont" format="enum">
        <enum name="black" value="0"/>
        <enum name="black_italic" value="1"/>
        <enum name="bold" value="2"/>
        <enum name="bold_italic" value="3"/>
        <enum name="italic" value="4"/>
        <enum name="light" value="5"/>
        <enum name="light_italic" value="6"/>
        <enum name="medium" value="7"/>
        <enum name="roman" value="8"/>
        <enum name="thin" value="9"/>
        <enum name="thin_italic" value="10"/>
        <enum name="ultra_light" value="11"/>
        <enum name="ultra_light_italic" value="12"/>
    </attr>
</resources>
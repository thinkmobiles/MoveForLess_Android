<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/cyan_800</item>

    </style>

    <style name="LoginActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Dark.Overlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/cyan_800</item>
    </style>

    <style name="Dark.Overlay.LightPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/cyan_800</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!--dialog styles-->
    <style name="DialogTitleStyle" parent="BaseTitleStyle">
        <item name="android:layout_marginBottom">@dimen/dialog_title_margin_button</item>
    </style>

    <style name="DialogDescriptionStyle" parent="BaseTextStyle">
        <item name="android:layout_marginBottom">@dimen/dialog_description_margin_button</item>
    </style>

    <!--widgets styles-->

    <!--BASE WIDGETS STYLE-->
    <style name="BaseTitleStyle">
        <item name="android:textSize">@dimen/job_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cyan_900</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textSize">@dimen/job_title_text_size</item>
        <item name="android:textColor">@color/cyan_800</item>
    </style>

    <style name="BaseEditTextStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--jobs ditails-->
    <style name="PagesTitleStyle" parent="BaseTitleStyle">
        <item name="android:layout_marginTop">@dimen/job_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/job_title_margin_bottom</item>
    </style>


    <!--questionnaire screen-->
    <style name="QuestionnaireDescriptionTextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginTop">@dimen/questionnaire_text_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/questionnaire_text_margin_top_bottom</item>

    </style>

    <style name="QuestionnaireCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/job_title_text_size</item>
        <item name="android:textColor">@color/cyan_800</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/questionnaire_checkbox_margin_left</item>
    </style>

    <!--login screen-->
    <style name="LoginEditText" parent="BaseEditTextStyle">
        <item name="android:minWidth">@dimen/edit_text_width</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_top_bottom</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_log_in</item>
        <item name="android:layout_marginTop">@dimen/login_btn_margin_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/login</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

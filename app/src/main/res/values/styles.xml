<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/cyan_dark</item>
        <item name="android:radioButtonStyle">@style/BaseRadioButtonStyle</item>

    </style>

    <style name="LoginActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/cyan_dark</item>
        <item name="android:itemBackground">@color/yellow</item>
    </style>

    <style name="ToolbarStyle.PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/blue_light</item>
        <item name="android:itemBackground">@color/blue_light</item>
        <item name="android:textColorPrimary">@color/cyan_dark</item>
        <item name="android:textSize">@dimen/base_title_size</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/cyan_dark</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTabLayoutJobList" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/blue_light</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!--dialog styles-->
    <style name="DialogTitleStyle" parent="BaseTitleStyle">
        <item name="android:layout_marginTop">@dimen/base_dialog_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/base_dialog_title_margin_button</item>
        <item name="android:layout_marginLeft">@dimen/base_dialog_layout_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/base_dialog_layout_margin_left_right</item>
    </style>

    <style name="DialogDescriptionStyle" parent="BaseTextStyle">
        <item name="android:layout_marginBottom">@dimen/base_dialog_description_margin_button</item>
        <item name="android:layout_marginLeft">@dimen/base_dialog_layout_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/base_dialog_layout_margin_left_right</item>
        <item name="android:maxWidth">@dimen/base_dialog_message_max_width</item>
    </style>

    <!--widgets styles-->

    <!--BASE WIDGETS STYLE-->
    <style name="BaseTitleStyle">
        <item name="android:textSize">@dimen/base_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cyan_dark</item>
        <item name="customFont">medium</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/cyan_dark</item>
        <item name="customFont">medium</item>
    </style>

    <style name="BaseSpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/base_edit_text_size</item>
        <item name="android:ems">10</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="customFont">medium</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/cyan_light</item>
        <item name="android:textSize">@dimen/base_button_text_size</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="customFont">bold</item>
    </style>

    <style name="BaseRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/cyan_dark</item>
        <item name="android:button">@drawable/radiobutton_button</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/questionnaire_checkbox_margin_left</item>
    </style>

    <!--jobs details-->
    <style name="PagesTitleStyle" parent="BaseTitleStyle">
        <item name="android:layout_marginTop">@dimen/job_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/job_title_margin_bottom</item>
        <item name="android:textColor">@color/cyan_ultra_dark</item>
    </style>

    <!--congratulations screen-->
    <style name="NavigateButtonStyle" parent="BaseButtonStyle">
        <item name="android:textColor">@color/cyan_dark</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <!--questionnaire screen-->
    <style name="QuestionnaireDescriptionTextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginTop">@dimen/questionnaire_text_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/questionnaire_text_margin_top_bottom</item>

    </style>

    <!--login screen-->
    <style name="LoginEditText" parent="BaseEditTextStyle">
        <item name="android:minWidth">@dimen/edit_text_width</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_top_bottom</item>
    </style>

    <style name="LoginButton" parent="NavigateButtonStyle">
        <item name="android:background">@drawable/btn_log_in</item>
        <item name="android:layout_marginTop">@dimen/login_btn_margin_top</item>
        <item name="android:text">@string/login</item>

    </style>

    <style name="JobDetailsEditText">
        <item name="android:layout_marginLeft">35dp</item>
    </style>
</resources>
